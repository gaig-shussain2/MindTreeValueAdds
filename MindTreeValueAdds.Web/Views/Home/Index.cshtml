			<label id="LoginUserName" style="color:darkgray; font-weight:normal; text-align:center; font-size:18px; padding-top:15px">@ViewBag.LoginUserName</label>
			<label id="LoginUserName1" style="color:darkgray; font-weight:normal; text-align:center; font-size:18px; padding-top:15px">@Session["LoginUserName"]</label>
		</div>*@
	</div>
</div>